<div class="page-header">
  <h1>Chat People</h1>
</div>

<ol class="people">
  <% @nicknames.each do |nickname| %>
    <li id="<%= nickname.name %>" class="h-card">
      <div class="media">

        <div class="media-left">
          <%= link_to "/#{nickname.person.domain}", class: "u-url" do %>
            <%= image_tag_with_fallback nickname.person %>
          <% end %>
        </div><!-- .media-left -->

        <div class="media-body">
          <p class="media-heading">
            <b><%= link_to nickname.name, "/#{nickname.person.domain}", class: "p-nickname" %></b>

            <% if nickname.person.name.present? %>
              &mdash;
              <%= link_to nickname.person.name, "/#{nickname.person.domain}", class: "p-name" %>
            <% end %>
          </p><!-- .media-heading -->

          <p><%= link_to nickname.person.domain, nickname.person.personal_website, class: "u-url" %></p>

          <% if nickname.person.timezone.present? %>
            <p class="p-tz"><%= nickname.person.timezone.name %></p>
          <% end %>
        </div><!-- .media-body -->

      </div><!-- .media -->
    </li>
  <% end %>
</ol>
